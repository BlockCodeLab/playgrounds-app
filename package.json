{
  "name": "playgrounds-app",
  "private": "true",
  "version": "1.3.6",
  "description": "The BlockCode Playgrounds application.",
  "author": {
    "name": "Yeqin Gong",
    "email": "yeqin.gong@qq.com"
  },
  "main": "dist/main.js",
  "scripts": {
    "docs": "bun x serve docs",
    "dev": "bun run build && bun run combine -- watch",
    "build": "playground-build packages/blocks/extensions/* && playground-build packages/gui/editors/* && playground-build packages/*",
    "combine": "bun --smol ./scripts/combine.js",
    "release": "BUN_ENV=production bun run build && BUN_ENV=production bun run combine",
    "prepreview": "bun run release -- clean",
    "preview": "bun x serve dist",
    "predeploy": "bun run release -- clean && bun x gh-pages-clean",
    "deploy": "bun x gh-pages -d dist -b",
    "deploy:beta": "BETA=yes bun run deploy -- beta",
    "deploy:release": "bun run deploy -- release",
    "start": "playground-build . && bun run build && bun run combine && bun x electron-forge start",
    "prepackage": "BUN_ENV=production playground-build . && bun run release",
    "package": "bun x electron-forge package",
    "premake": "bun run prepackage",
    "make": "bun x electron-forge make",
    "make:mac": "bun run make -- --platform darwin --arch arm64,x64",
    "make:win": "bun run make -- --platform win32 --arch ia32,x64",
    "make:all": "bun run prepackage && bun x electron-forge make --platform darwin --arch arm64,x64 && bun x electron-forge make --platform win32 --arch ia32,x64"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  },
  "trustedDependencies": [
    "electron"
  ],
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-dmg": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@preact/signals": "^2.6.1",
    "@preact/signals-core": "^1.12.2",
    "@types/bun": "latest",
    "electron": "^39.4.0",
    "gh-pages": "^6.3.0",
    "playground-build": "git+https://github.com/BlockCodeLab/playground-build.git",
    "preact": "^10.28.2",
    "serve-handler": "^6.1.6"
  },
  "workspaces": [
    "packages/*",
    "packages/gui/editors/*",
    "packages/blocks/extensions/*"
  ]
}
